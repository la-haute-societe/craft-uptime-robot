{% extends "uptime-robot/_layouts/main.twig" %}
{% import "_includes/forms" as forms %}
{% set fullPageForm = true %}

{% set crumbs = [
    {
        label: "Uptime Robot",
        url: cpUrl('uptime-robot')
    },
    {
        label: 'Confirm delete'|t('uptime-robot'),
        url: cpUrl("uptime-robot/edit-monitor/" ~ model.id)
    }
] %}

{# Content that should appear in the page header#}
{% block actionButton %}

{% endblock %}

{# The content of the CP Section#}
{% set content %}
    {% if model.name %}
        <h3>{{ 'Are you sure you want to delete "{name}" monitor?'|t('uptime-robot', { name: model.name }) }}</h3>
    {% else %}
        <h3>{{ 'The related Uptime Robot monitor seems to not exists anymore.'|t('uptime-robot') }}</h3>
        <h4>{{ 'Are you sure you want to delete this monitor?'|t('uptime-robot') }}</h4>
    {% endif %}

    <a href="{{ url('uptime-robot') }}" class="btn big">{{ 'Cancel'|t('uptime-robot') }}</a>
    <button type="submit" class="btn submit big">{{ 'OK'|t('uptime-robot') }}</button>
{% endset %}
