{% extends "uptime-robot/_layouts/main.twig" %}
{% set fullPageForm = true %}

{% set crumbs = [
    {
        label: "Uptime Robot",
        url: cpUrl('uptime-robot')
    },
    {
        label: "Edit monitor \"{name}\""|t('uptime-robot', {name: model.name}),
        url: cpUrl("uptime-robot/edit-monitor/" ~ model.id)
    }
] %}

{# Content that should appear in the page header#}
{# TODO Add a pause/unpause monitor action #}
{# TODO Add a reset monitor action #}
{% block actionButton %}
    <div class="btngroup">
        <input type="submit" class="btn submit" value="{{ 'Update monitor'|t('uptime-robot') }}">
        {% if showSubMenu %}
            <div class="btn submit menubtn"></div>
            <div class="menu">
                <ul>
                    {% if showRemoveMonitor %}
                        <li>
                            <a class="formsubmit error" data-param="id" data-value="{{ model.id }}" data-confirm="{{ 'Are you sure you want to delete this monitor?'|t('uptime-robot') }}" data-action="uptime-robot/cp/remove-monitor">{{ 'Delete'|t('app') }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}

{# The content of the CP Section#}
{% set content %}
    {% include 'uptime-robot/_includes/_form' %}
{% endset %}

